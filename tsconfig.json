{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "./locales/**/*"
    ]
}
